<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shipping_background"
    tools:context="edu.orangecoastcollege.cs273.balbert.shippingcalculator.MainActivity">


    <TextView
        android:id="@+id/packageWeightTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textSize="28sp"
        android:text="Weight of the package"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/packageWeightTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="8"
        android:textSize="32sp"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/inOuncesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:text="(in ounces)" />

    <TextView
        android:id="@+id/baseCostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inOuncesTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="54dp"
        android:textSize="20sp"
        android:text="Base Cost:" />

    <TextView
        android:id="@+id/baseCostAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/baseCostLabel"
        android:layout_below="@id/inOuncesTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"
        android:text="$ 0.00" />

    <TextView
        android:id="@+id/addedCostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/baseCostLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="42dp"
        android:textSize="20sp"
        android:text="Added Cost:" />

    <TextView
        android:id="@+id/addedCostAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/addedCostLabel"
        android:layout_below="@id/baseCostAmount"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"
        android:text="$ 0.00" />

    <TextView
        android:id="@+id/totalCostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addedCostLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="4dp"
        android:textSize="20sp"
        android:text="Total Shipping Cost:" />

    <TextView
        android:id="@+id/totalCostAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addedCostAmount"
        android:layout_toRightOf="@id/totalCostLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:text="$ 0.00" />
</RelativeLayout>
